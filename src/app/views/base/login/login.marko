<html>
    <head>
        <meta charset="utf-8">
    </head>
    <body>
        <h1>Login</h1>
        <form action="/login" method="post">
            <div>
                <label for="email">E-mail:</label>
                <input type="text" id="email" name="email"/>
            </div>
            <div>
                <label for="password">Password:</label>
                <input type="password" id="password" name="password"/>
            </div>
            <input type="submit" value="Login"/>
        </form> 
    </body> 
</html>